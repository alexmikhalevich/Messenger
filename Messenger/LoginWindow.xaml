<Window x:Name="LoginWindow1" x:Class="Messenger.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="259" Width="276" ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="login_textbox" HorizontalAlignment="Left" Height="23" Margin="10,10,0,0" TextWrapping="Wrap" Text="Login" VerticalAlignment="Top" Width="250"/>
        <TextBox x:Name="password_textbox" HorizontalAlignment="Left" Height="23" Margin="10,60,0,0" TextWrapping="Wrap" Text="Password" VerticalAlignment="Top" Width="250"/>
        <Button Content="Sign in" HorizontalAlignment="Left" Margin="185,199,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <TextBox x:Name="server_textbox" HorizontalAlignment="Left" Height="23" Margin="10,109,0,0" TextWrapping="Wrap" Text="Server address" VerticalAlignment="Top" Width="250"/>
        <TextBox x:Name="port_textbox" HorizontalAlignment="Left" Height="23" Margin="10,158,0,0" TextWrapping="Wrap" Text="Port" VerticalAlignment="Top" Width="250"/>
        <CheckBox x:Name="encryption_checkbox" Content="Enable encryption" HorizontalAlignment="Left" Margin="10,206,0,0" VerticalAlignment="Top" Width="114" IsThreeState="False"/>

    </Grid>
</Window>
